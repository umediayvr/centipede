{
  "scripts": [
    "*/*.py"
  ],
  "vars": {
    "prefix": "/data/job",
    "job": "RND",
    "__uiHintSourceColumns": [
      "assetName",
      "mapType",
      "variant"
    ]
  },
  "tasks": [
    {
      "run": "createTextureVersion",
      "options": {
        "maketxArgs": "--oiio --colorconvert sRGB linear"
      },
      "metadata": {
        "match.types": [
          "texture"
        ],
        "wrapper.name": "subprocess",
        "wrapper.options": {
          "user": ""
        }
      },
      "target": "{prefix}/{job}/assets/!{assetName}/publish/texture/{variant}/(newver <parentPath>)"
    }
  ]
}
